<mvc:View controllerName="com.ui5.trng.sapui5bootcampactivity04.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    >
    <Page id="pageMain" title="{i18n>title}" floatingFooter="true">
        <content>
            <VBox id="idVBox" class="sapUiSmallMargin">
                <items>
                    <f:SimpleForm 
                        id="idSimpleForm" 
                        editable="true" 
                        layout="ResponsiveGridLayout" 
                        title="{i18n>detailsTitle}" 
                        labelSpanXL="3" 
                        labelSpanL="3" 
                        labelSpanM="3" 
                        labelSpanS="12" 
                        adjustLabelSpan="false" 
                        emptySpanXL="4" 
                        emptySpanL="4" 
                        emptySpanM="4" 
                        emptySpanS="0" 
                        columnsXL="1" 
                        columnsL="1" 
                        columnsM="1" 
                        singleContainerFullSize="false">
                        <f:content>
                            <Label id="idLblFName" text="{i18n>firstNameLbl}" />
                            <Input id="idInptFName" value="" />

                            <Label id="idLblLName" text="{i18n>lastNameLbl}" />
                            <Input id="idInptLName" value="" />

                            <Label id="idLblMOP" text="{i18n>mopLbl}" />
                            <Select id="idSelMOP" forceSelection="false" change="onChangeMOP">
                                <items>
                                    <core:Item id="idItmCOD" text="{i18n>codSelTxt}" key="COD"/>
                                    <core:Item id="idItmCC" text="{i18n>creditCardSelTxt}" key="CC"/>
                                    <core:Item id="idItmGCash" text="{i18n>gcashSelTxt}" key="GCASH"/>
                                </items>
                            </Select>

                            <Label id="idLblPhone" text="{i18n>mobileLbl}" visible="false"/>
                            <Input id="idInputPhone" value="" visible="false"/>

                            <Label id="idLblCardNumber" text="{i18n>cardLbl}" visible="false"/>
                            <Input id="idInputCardNumber" value="" visible="false"/>
                        </f:content>
                    </f:SimpleForm>
                    <Table id="idTableSCart" inset="false">
                        <headerToolbar>
                            <OverflowToolbar id="idOFT">
                                <content>
                                    <Title id="idTableTitleSCart" text="{i18n>sCardTitle}"/>
                                    <ToolbarSpacer id="idTSpacer"/>
                                    <Button id="idBtnAddItems" icon="sap-icon://cart-4" tooltip="Add to Cart" press="onAddItem"/>
                                </content>
                            </OverflowToolbar>
                        </headerToolbar>
                        <columns>
                            <Column id="idCol1">
                                <Text id="idColText1" text="{i18n>itemTblTxt}" />
                            </Column>
                            <Column id="idCol2">
                                <Text id="idColText2" text="{i18n>quantityTblTxt}" />
                            </Column>
                            <Column id="idCol3">
                                <Text id="idColText3" text="{i18n>priceTblTxt}" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem id="idColListItem1" vAlign="Middle">
                                <cells>
                                    <Text id="idText1" text="iPhone 14 Pro Max" />
                                    <Text id="idText2" text="2" />
                                    <Text id="idText3" text="$2000" />
                                </cells>
                            </ColumnListItem>
                            <ColumnListItem id="idColListItem2" vAlign="Middle">
                                <cells>
                                    <Text id="idText4" text="Louis Vuitton Speedy" />
                                    <Text id="idText5" text="1" />
                                    <Text id="idText6" text="$14000" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </items>
            </VBox>
        </content>
        <footer>
            <OverflowToolbar id="idOFTFooter">
                <ToolbarSpacer id="idTSpacerFooter"/>
                <Button id="idBtnCheckout" text="{i18n>checkOutBtn}" tooltip="Check Out" press="onPressCheckout"/>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>